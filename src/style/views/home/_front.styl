.front
    .content
        flex-direction: column
        align-items: center
        +min(2)
            margin-top: -20px
        h2
            font-size: 4.3rem
            font-weight: 600
            margin: 0 0 rem(20px)
            padding: 0
            letter-spacing: -3px
            align-items: flex-start
            +min(1)
                font-size: 7.4rem
                letter-spacing: -5px
            +min(2)
                font-size: 11rem
                margin: 0 0 0.9vw
                letter-spacing: -7px
            +min(3)
                font-size: 12rem
        div
            display: flex
            flex-wrap: wrap
            align-items: center
            justify-content: center
            p
                width: 100%
                font-size: 1.6rem
                font-weight: 300
                text-align: center
                margin: 0
                color: scheme.heading
                line-height: 1.2
                +min(1)
                    font-size: 1.5rem
                +min(2)
                    font-size: 2.1rem
                +min(3)
                    font-size: 2.4rem
            div
                display: flex
                a
                    button(large, color: tomato)
                    margin-top: rem(35px)
                    &:first-of-type { margin-right: rem(12px) }
                    +min(1)
                        font-size: 1.2rem
                        padding: rem(15px) rem(25px)
                    +min(2)
                        font-size: 1.25rem
                        padding: rem(16px) rem(28px)
                    +min(3)
                        font-size: 1.32rem
                        padding: rem(18px) rem(32px)
